{
  "extends": "stylelint-config-standard-scss",
  "rules": {
    "selector-class-pattern": "^[a-z]+([A-Z][a-z0-9]*)*$",
    "selector-pseudo-class-no-unknown": [true, {
      "ignorePseudoClasses": ["global"]
    }],
    "color-function-notation": "legacy",
    "alpha-value-notation": "number"
  }
  
}